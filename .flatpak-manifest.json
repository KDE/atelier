{
    "id": "org.kde.atelier",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "atelier",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--share=network",
        "--socket=wayland",
        "--filesystem=host",
        "--device=all",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "modules": [
        {
            "name": "atcore",
            "config-opts": ["-DBUILD_GUI=OFF"],
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/mkspecs",
                "/include",
                "/*/cmake"
            ],
            "sources": [ 
                { "type": "git", "url": "https://invent.kde.org/kde/atcore.git" }
            ]
        },
        {
            "name": "atelier",
            "buildsystem": "cmake-ninja",
            "sources": [
                { "type": "dir", "path": "." }
            ]
        }
    ]
}
