{
    "id": "org.kde.atelier",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "atelier",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=all",
        "--filesystem=host",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "cleanup": [
        "/mkspecs",
        "/include",
        "/*/cmake"
    ],
    "modules": [
        {
            "name": "atcore",
            "config-opts": [
                "-DBUILD_DOCS=OFF",
                "-DBUILD_TESTING=OFF",
                "-DBUILD_GUI=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/kde/atcore.git"
                }
            ]
        },
        {
            "name": "atelier",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
